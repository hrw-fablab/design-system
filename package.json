{
  "name": "design-system",
  "version": "1.0.0",
  "description": "HRW-Fablab Design System",
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "css,scss"
    }
  },
  "scripts": {
    "watch": "npm-watch",
    "build": "parcel-css --minify --nesting --targets \"last 1 Chrome major versions, last 2 Firefox major versions, last 2 Safari major versions , last 2 Edge major versions\" --bundle --custom-media src/main.css -o ../cms/design/css/styles.min.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hrw-fablab/design-system.git"
  },
  "author": "Max Graw",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hrw-fablab/design-system/issues"
  },
  "homepage": "https://github.com/hrw-fablab/design-system#readme",
  "devDependencies": {
    "@parcel/css-cli": "^1.12.0",
    "npm-watch": "^0.11.0"
  }
}
